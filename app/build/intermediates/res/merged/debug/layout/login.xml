<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apiiit_rkv.vegmarket.Login"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/login"
        android:layout_height="147dp" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:id="@+id/eemail"
        android:layout_height="45dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/epass"
        app:passwordToggleEnabled="true"
        android:layout_height="45dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/remembernames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember" />

            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:onClick="navtoforgot"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Forgot Password?"
                android:textSize="16sp" />
        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:background="#34691d"
            android:onClick="LoginTOVegMarket"
            android:text="Login"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>


    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:onClick="createAcoount"
        android:text="Not account yet? create one"
        android:layout_height="wrap_content" />
</LinearLayout>
