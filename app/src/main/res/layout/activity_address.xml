<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/aer"
tools:context="com.example.apiiit_rkv.vegmarket.Address">
<TextView
    android:text="Enter Address"
    android:textColor="#ffff"
    android:gravity="center"
    android:fontFamily="sans-serif-smallcaps"
    android:textStyle="bold"
    android:id="@+id/enterpersondetails"
    android:textSize="27sp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="60dp" />

<EditText
    android:id="@+id/flat"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:backgroundTint="#ffff"
    android:drawablePadding="20dp"
    android:hint="Flat, House no., Bulding, Apartment"
    android:inputType="text"
    android:paddingLeft="10dp"
    android:textColor="#ffff"
    android:maxEms="10"
    android:minEms="10"
    android:textColorHint="#ffff"
    android:textSize="20sp"
    android:layout_below="@+id/pincode"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:id="@+id/pincode"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:backgroundTint="#ffff"
    android:drawablePadding="20dp"
    android:hint="Pincode"
    android:maxEms="6"
    android:minEms="6"
    android:inputType="number"
    android:paddingLeft="10dp"
    android:textColor="#ffff"
    android:textColorHint="#ffff"
    android:textSize="20sp"
    android:layout_below="@+id/contact"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:id="@+id/contact"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:backgroundTint="#ffff"
    android:drawablePadding="20dp"
    android:hint="Mobile Number"
    android:inputType="number"
    android:paddingLeft="10dp"
    android:textColor="#ffff"
    android:textColorHint="#ffff"
    android:textSize="20sp"
    android:layout_below="@+id/yourname"
    android:layout_centerHorizontal="true" />

<EditText
    android:id="@+id/yourname"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:backgroundTint="#ffff"
    android:drawablePadding="20dp"
    android:hint="Full Name"
    android:inputType="text"
    android:paddingLeft="10dp"
    android:textColor="#ffff"
    android:textColorHint="#ffff"
    android:textSize="20sp"
    android:layout_marginTop="52dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:id="@+id/area"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:backgroundTint="#ffff"
    android:drawablePadding="20dp"
    android:hint="Area, Colony, Street, Sector, Village"
    android:inputType="text"
    android:paddingLeft="10dp"
    android:textColor="#ffff"
    android:textColorHint="#ffff"
    android:textSize="20sp"
    android:layout_below="@+id/flat"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<EditText
    android:id="@+id/landmark"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:backgroundTint="#ffff"
    android:drawablePadding="20dp"
    android:hint="Landmark e.g.near appolo hospital"
    android:inputType="text"
    android:paddingLeft="10dp"
    android:textColor="#ffff"
    android:textColorHint="#ffff"
    android:textSize="20sp"
    android:layout_below="@+id/area"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/town"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawablePadding="20dp"
        android:hint="Town/City"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/landmark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawablePadding="20dp"
        android:hint="State"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/town"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
    android:layout_width="match_parent"
    android:background="#79a209df"
    android:layout_height="60dp"
    android:textSize="22sp"
    android:text="Proceed"
    android:onClick="payment"
    android:textColor="#fff"
    android:id="@+id/qrpersondetails"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>
