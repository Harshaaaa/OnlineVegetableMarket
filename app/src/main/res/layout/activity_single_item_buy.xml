<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_item_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.apiiit_rkv.vegmarket.SingleItemBuy"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegetable"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/item_title"
        android:gravity="center_vertical"
        android:textSize="32dp"
        android:textColor="#fff" />
    <ImageView
    android:layout_width="match_parent"
     android:layout_height="236.4dp"
     android:src="@mipmap/ic_launcher"
        android:background="#FFF"
     android:id="@+id/item_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="500gm"
                android:layout_gravity="center_vertical"
                android:id="@+id/item_description"
                android:textSize="23dp"
                android:gravity="center_vertical"
                android:textColor="#fff" />
<TextView
    android:layout_width="40dp"
    android:text="Rs."
    android:textColor="#fff"
    android:textSize="23sp"
    android:gravity="center_vertical"
    android:layout_marginLeft="20dp"
    android:layout_height="50dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="100"
            android:textColor="#FFF"
            android:textSize="23sp"
            android:gravity="center_vertical"
            android:id="@+id/itemcost"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="#FFF"
            android:gravity="center_vertical"
            android:text="Choose Quantity"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp">
                <Button
                    android:layout_width="37dp"
                    android:text="-"
                    android:textColor="#FFF"
                    android:background="#e92b60"
                    android:id="@+id/minus"
                    android:layout_gravity="center"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:id="@+id/data"
                    android:background="#e92b60"
                    android:text="0"
                    android:layout_height="40dp" />
                <Button
                    android:layout_width="40dp"
                    android:text="+"
                    android:background="#e92b60"
                    android:id="@+id/plus"
                    android:textColor="#FFF"
                    android:layout_gravity="center"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="170dp"
            android:text="Total Cost"
            android:textSize="24sp"
            android:textColor="#FFF"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/costofitem"
            android:text="Rs.0"
            android:layout_marginLeft="20dp"
            android:textSize="24sp"
            android:textColor="#FFF"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:text="Buy NoW"
        android:background="#f16c2a"
        android:textSize="20sp"
        android:layout_marginTop="9.5dp"
        android:textColor="#FFF"
        android:onClick="checkout"
        android:layout_height="60dp" />
</LinearLayout>
